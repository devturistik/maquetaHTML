<%- include('../../partials/header', { title: 'Listar Cuentas' }) %>
<%- include('../../partials/navbar') %>
<%- include('../../partials/sidebar') %>
<%- include('../../partials/content-wrapper-open') %>

<style>
  /* Estilos generales de la tabla */
  .table thead th {
    text-align: center;
    vertical-align: middle;
    background-color: #f8f9fa;
    color: #495057;
    border-bottom: 2px solid #dee2e6;
  }
  .table tbody td {
    vertical-align: middle;
    text-align: center;
    border-bottom: 1px solid #dee2e6;
  }

  /* Estilos específicos para columnas */
  .nombre-column {
    text-align: left;
    white-space: normal;
    word-wrap: break-word;
  }

  /* Estilo para botones */
  .btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    border-radius: 0.5rem;
  }

  /* Responsividad */
  @media (max-width: 767.98px) {
    .nombre-column {
      max-width: 150px;
    }
    .table th, .table td {
      font-size: 0.875rem;
    }
  }
</style>

<div class="container-xxl flex-grow-1 container-p-y">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Listado de Cuentas</h4>
    <a href="/administracion/cuentas/nuevo" class="btn btn-primary d-flex align-items-center">
      <i class="fas fa-plus me-1"></i> Nueva Cuenta
    </a>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover w-100" id="tablaCuentas">
          <thead>
            <tr>
              <th>ID</th>
              <th>Código</th>
              <th class="nombre-column">Nombre de la Cuenta</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% cuentas.forEach(cuenta => { %>
              <tr>
                <td><%= cuenta.id_cuenta %></td>
                <td><%= cuenta.codigo %></td>
                <td class="nombre-column"><%= cuenta.nombre_cuenta %></td>
                <td>
                  <div class="btn-group" role="group">
                    <a href="/administracion/cuentas/<%= cuenta.id_cuenta %>/editar" 
                       class="btn btn-sm btn-outline-primary" title="Editar">
                      <i class="fas fa-edit"></i>
                    </a>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#tablaCuentas').DataTable({
      responsive: true,
      autoWidth: false,
      language: {
        url: "https://cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json",
        search: "",
        emptyTable: "No hay cuentas disponibles."
      },
      pageLength: 10,
      lengthChange: false,
      order: [[0, "asc"]],
      columnDefs: [
        { targets: 'nombre-column', className: 'nombre-column' },
        { targets: '_all', responsivePriority: 2 }
      ],
      initComplete: function () {
        var dataTableFilter = $('#tablaCuentas_filter');
        var searchInput = dataTableFilter.find('input').detach();
        dataTableFilter.empty();
        var searchContainer = $('<div class="input-group"></div>');
        var searchIcon = $('<span class="input-group-text"><i class="fas fa-search"></i></span>');
        searchInput.addClass('form-control').attr('placeholder', 'Buscar cuenta...');
        searchContainer.append(searchIcon).append(searchInput);
        dataTableFilter.append(searchContainer);
      }
    });
  });
</script>

