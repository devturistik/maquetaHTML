<%- include('../../partials/header', { title: 'Listado de Tipos de Orden' }) %>
<%- include('../../partials/navbar') %>
<%- include('../../partials/sidebar') %>
<%- include('../../partials/content-wrapper-open') %>

<div class="container-xxl flex-grow-1 container-p-y">
  <!-- Encabezado con ícono -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">
      <i class="fas fa-clipboard-list text-primary"></i> Listado de Tipos de Orden
    </h4>
    <a href="/administracion/tipoorden/crear" class="btn btn-success">
      <i class="fas fa-plus me-2"></i> Nuevo Tipo de Orden
    </a>
  </div>

  <!-- Tabla con DataTables -->
  <div class="card">
    <div class="card-body">
      <table class="table table-hover table-striped align-middle" id="tablaTiposOrden">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Creado Por</th>
            <th>Fecha Creación</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% tiposOrden.forEach(tipo => { %>
            <tr>
              <td><%= tipo.id_tipo %></td>
              <td><%= tipo.nombre %></td>
              <td>
                <% if (tipo.estatus_tipo_orden) { %>
                  <span class="badge bg-success"><i class="fas fa-check-circle"></i> Activo</span>
                <% } else { %>
                  <span class="badge bg-secondary"><i class="fas fa-times-circle"></i> Inactivo</span>
                <% } %>
              </td>
              <td><%= tipo.creado_por %></td>
              <td><%= new Date(tipo.created_at).toLocaleDateString() %></td>
              <td>
                <div class="d-flex gap-2">
                  <!-- Botón Ver Detalles -->
                  <a href="/administracion/tipoorden/<%= tipo.id_tipo %>/detalles" class="btn btn-info btn-sm" title="Ver Detalles">
                    <i class="fas fa-eye"></i>
                  </a>

                  <!-- Botón Editar -->
                  <a href="/administracion/tipoorden/<%= tipo.id_tipo %>/editar" class="btn btn-warning btn-sm" title="Editar">
                    <i class="fas fa-edit"></i>
                  </a>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#tablaTiposOrden').DataTable({
      "responsive": true,
      "language": {
        "url": "https://cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
      },
      "columnDefs": [
        { targets: [5], orderable: false }
      ]
    });
  });
</script>

