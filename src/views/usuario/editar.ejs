<%- include('../partials/header', { title: 'Editar Usuario' }) %>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="app-usuario">
      <form action="<%= usuario.id %>" method="POST"> <!-- Codifica el ID aquí -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-6 row-gap-4">
          <div class="d-flex flex-column justify-content-center">
            <h4 class="mb-1">Editar Usuario</h4>
            <p class="mb-0">Modifica la información del usuario.</p>
          </div>
          <div class="d-flex align-content-center flex-wrap gap-4">
            <div class="d-flex gap-4">
          <a href="/usuarios" class="btn btn-label-secondary">Regresar</a>
            </div>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
          </div>
        </div>

        <!-- Mensaje de error -->
        <% if (typeof error !== "undefined" && error) { %>
          <div class="alert alert-danger">
            <%= error || "" %>
          </div>
        <% } %>

        <!-- Mensaje de éxito -->
        <% if (typeof success_msg !== "undefined" && success_msg) { %>
          <div class="alert alert-success">
            <%= success_msg || "" %>
          </div>
        <% } %>

        <div class="row">
          <div class="col-12 col-lg-12">
            <div class="card mb-6">
              <div class="card-header">
                <h5 class="card-title mb-0">Información del Usuario</h5>
              </div>
              <div class="card-body">
                <div class="row mb-6">
                  <div class="col">
                    <label class="form-label" for="usuario-nombre">Nombre</label>
                    <input type="text" class="form-control" id="usuario-nombre" placeholder="Elvis" name="usuarioNombre" value="<%= usuario.nombre %>" aria-label="Usuario Nombre" />
                  </div>
                  <div class="col">
                    <label class="form-label" for="usuario-apellido">Apellido</label>
                    <input type="text" class="form-control" id="usuario-apellido" placeholder="Santeliz" name="usuarioApellido" value="<%= usuario.apellido %>" aria-label="Usuario Apellido" />
                  </div>
                </div>
                <div class="mb-6">
                  <label class="form-label" for="usuario-depto">Departamento</label>
                  <select id="usuario-depto" class="select2 form-select" name="usuarioDepartamento">
                    <option value="">Seleccione:</option>
                    <option value="TI" <%= usuario.departamento === 'TI' ? 'selected' : '' %>>TI</option>
                    <option value="MARKETING" <%= usuario.departamento === 'MARKETING' ? 'selected' : '' %>>MARKETING</option>
                    <option value="FINANZAS" <%= usuario.departamento === 'FINANZAS' ? 'selected' : '' %>>FINANZAS</option>
                    <option value="COMERCIAL" <%= usuario.departamento === 'COMERCIAL' ? 'selected' : '' %>>COMERCIAL</option>
                    <option value="CERRO" <%= usuario.departamento === 'CERRO' ? 'selected' : '' %>>CERRO</option>
                  </select>
                </div>
                <div class="row mb-6">
                  <div class="col">
                    <label class="form-label" for="usuario-correo">Correo</label>
                    <input type="email" class="form-control" id="usuario-correo" placeholder="esanteliz@turistik.com" name="usuarioCorreo" value="<%= usuario.correo %>" aria-label="Correo de Usuario" />
                  </div>
                  <div class="col">
                    <label class="form-label" for="usuario-clave">Contraseña</label>
                    <input type="password" class="form-control" id="usuario-clave" placeholder="*******************" name="usuarioClave" aria-label="Contraseña de Usuario" />
                    <small class="form-text text-muted">Deja en blanco si no deseas cambiar la contraseña.</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>

  <%- include('../partials/footer-text') %>
  <div class="content-backdrop fade"></div>
</div>
<%- include('../partials/footer') %>

<script>
  // Función para ocultar mensajes después de 5 segundos
  window.onload = function() {
    const successMsg = document.querySelector('.alert-success');
    const errorMsg = document.querySelector('.alert-danger');

    if (successMsg) {
      setTimeout(() => {
        successMsg.style.display = 'none';
      }, 5000); // Oculta después de 5000 ms (5 segundos)
    }

    if (errorMsg) {
      setTimeout(() => {
        errorMsg.style.display = 'none';
      }, 5000); // Oculta después de 5000 ms (5 segundos)
    }
  };
</script>
