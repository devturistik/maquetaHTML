<%- include('../partials/header', { title: 'Detalle de Solicitud' }) %>
<%- include('../partials/navbar') %>
<%- include('../partials/sidebar') %>
<%- include('../partials/content-wrapper-open') %>

<div class="content-wrapper">
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="app-solicitud-detalle">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1">Detalle de Solicitud</h4>
          <p class="mb-0">
            Informaci贸n detallada de la solicitud seleccionada.
          </p>
        </div>
        <div>
          <a href="/solicitudes" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Regresar
          </a>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Informaci贸n de la Solicitud</h5>
        </div>
        <div class="card-body">
          <!-- Mostrar Asunto -->
          <div class="mb-3">
            <label class="form-label">Asunto</label>
            <p class="form-control-plaintext"><%= solicitud.asunto %></p>
          </div>

          <!-- Mostrar Descripci贸n -->
          <div class="mb-3">
            <label class="form-label">Descripci贸n</label>
            <p class="form-control-plaintext">
              <%= solicitud.descripcion %>
            </p>
          </div>

          <!-- Mostrar Archivos -->
          <div class="mb-3">
            <label class="form-label">Archivos Adjuntos</label>
            <%
              let archivos = [];
              try {
                archivos = JSON.parse(solicitud.archivos);
              } catch (e) {
                console.error("Error al parsear los archivos:", e);
              }
            %>
            <% if (archivos && archivos.length > 0) { %>
            <ul>
              <% archivos.forEach((archivo) => { %>
              <li>
                <a href="/uploads/<%= archivo %>" target="_blank"><%= archivo %></a>
              </li>
              <% }); %>
            </ul>
            <% } else { %>
            <p>No hay archivos adjuntos.</p>
            <% } %>
          </div>

          <!-- Mostrar Estatus -->
          <div class="mb-3">
            <label class="form-label">Estatus</label>
            <p class="form-control-plaintext"><%= solicitud.estatus %></p>
          </div>

          <!-- Mostrar Usuario Solicitante -->
          <div class="mb-3">
            <label class="form-label">Solicitante</label>
            <p class="form-control-plaintext">
              <%= solicitud.usuario_solicitante %>
            </p>
          </div>

          <!-- Mostrar Correo Solicitante -->
          <div class="mb-3">
            <label class="form-label">Correo del Solicitante</label>
            <p class="form-control-plaintext">
              <%= solicitud.correo_solicitante %>
            </p>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%- include('../partials/footer-text') %>
<%- include('../partials/footer') %>
<%- include('../partials/content-wrapper-close') %>