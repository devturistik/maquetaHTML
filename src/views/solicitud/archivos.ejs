<!-- views/solicitud/archivos.ejs -->
<%- include('../partials/header', { title: 'Archivos Adjuntos' }) %>
<%- include('../partials/navbar') %>
<%- include('../partials/sidebar') %>
<%- include('../partials/content-wrapper-open') %>

<div class="content-wrapper">
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="app-solicitud-archivos">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">Archivos Adjuntos</h4>
        <a href="/solicitudes" class="btn btn-secondary">
          <i class="fas fa-arrow-left me-1"></i> Regresar
        </a>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <% if (archivos && archivos.length > 0) { %>
            <ul class="list-group list-group-flush">
              <% archivos.forEach((archivo) => {
                const extension = archivo.url.split('.').pop().toLowerCase();
                let iconClass = 'fas fa-file';
                if (['pdf'].includes(extension)) iconClass = 'fas fa-file-pdf text-danger';
                else if (['jpg', 'jpeg', 'png'].includes(extension)) iconClass = 'fas fa-file-image text-info';
                else if (['doc', 'docx'].includes(extension)) iconClass = 'fas fa-file-word text-primary';
                else if (['xlsx', 'xls'].includes(extension)) iconClass = 'fas fa-file-excel text-success';
              %>
                <li class="list-group-item">
                  <a href="<%= archivo.url %>" target="_blank" class="text-decoration-none">
                    <i class="<%= iconClass %> me-2"></i> <%= archivo.url.split('/').pop() %>
                  </a>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-muted">No hay archivos adjuntos.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer-text') %>
<%- include('../partials/footer') %>
<%- include('../partials/content-wrapper-close') %>
