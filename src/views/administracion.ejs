<%- include('partials/header', { title: 'Administración' }) %>
<%- include('partials/navbar') %>
<%- include('partials/sidebar') %>
<%- include('partials/content-wrapper-open') %>

<div class="container-xxl flex-grow-1 container-p-y">
  <div class="mb-4">
    <h4 class="mb-3">Administración de Tablas</h4>
    <p class="mb-0">Selecciona una tabla para gestionar sus datos.</p>
  </div>
  <% const iconosTabla = {
    'banco': 'ti ti-building-bank',
    'centrocosto': 'ti ti-calculator',
    'cuentas': 'ti ti-wallet',
    'empresa': 'ti ti-building',
    'monedas': 'ti ti-currency-dollar',
    'plazopago': 'ti ti-clock',
    'producto': 'ti ti-package',
    'proveedor': 'ti ti-truck-delivery',
    'tipoorden': 'ti ti-file-description',
  }; %>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% tablas.forEach(tabla => { %>
      <div class="col">
        <a href="<%= tabla.ruta %>" class="text-decoration-none text-reset">
          <div class="card h-100">
            <div class="card-body text-center">
              <div class="mb-3">
                <%
                const nombreTabla = tabla.nombre.toLowerCase();
                const claseIcono = iconosTabla[nombreTabla] || 'ti ti-database';
                %>
                <i class="tf-icons <%= claseIcono %>" style="font-size: 2rem;"></i>
              </div>
              <h5 class="card-title"><%= tabla.nombre %></h5>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer-text') %>
<%- include('partials/footer') %>
<%- include('partials/content-wrapper-close') %>
