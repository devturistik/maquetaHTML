<%- include('partials/header', { title: 'Solicitudes' }) %>
<%- include('partials/navbar') %>
<%- include('partials/sidebar') %>
<%- include('partials/content-wrapper-open') %>

<style>
  .table td {
    vertical-align: middle;
  }
  .id-column {
    width: 50px;
    max-width: 50px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }
  .descripcion-column {
    max-width: 100px;
    word-wrap: break-word;
    white-space: normal;
  }
  .btn-fixed-width {
    width: 100px;
    text-align: center;
    white-space: nowrap;
  }
  @media (max-width: 576px) {
    .btn-fixed-width {
      width: 100%;
      margin-bottom: 5px;
    }
    .btn-group-actions {
      display: flex;
      flex-direction: column;
      width: 100%;
    }
  }
  .list-group-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.3s;
  }
  .list-group-item:hover {
    background-color: #f8f9fa;
  }
  .file-info {
    display: flex;
    align-items: center;
  }
  .file-info i {
    font-size: 1.5rem;
    margin-right: 10px;
  }
  .btn-group-actions button,
  .btn-group-actions a {
    margin-left: 5px;
  }
  @media (max-width: 576px) {
    .list-group-item {
      flex-direction: column;
      align-items: flex-start;
    }
    .btn-group-actions {
      margin-top: 10px;
    }
  }
  .estatus-column {
    width: 120px;
    text-align: center;
  }
  .estatus-column .badge {
    width: 100px;
    display: inline-block;
    text-align: center;
  }
</style>

<div class="content-wrapper">
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="app-solicitudes-lista">
      <% if (successMessage && successMessage.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= successMessage %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Cerrar"
        ></button>
      </div>
      <% } %>
      <% if (errorMessage && errorMessage.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= errorMessage %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Cerrar"
        ></button>
      </div>
      <% } %>

      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div>
          <h4 class="mb-1">Lista de Solicitudes</h4>
          <p class="mb-0">Solicitudes realizadas por los usuarios.</p>
        </div>
        <div>
          <a href="/solicitudes-crear" class="btn btn-primary d-flex align-items-center">
            <i class="fas fa-plus me-1"></i> Crear Nueva Solicitud
          </a>
        </div>
      </div>

      <div style="display: none;">
        <select id="estatus-filter" class="form-select" style="width: 200px;">
          <option value="">Sin filtro</option>
          <%
            const estatusSet = new Set();
            solicitudes.forEach(solicitud => {
              let estatusDisplayOption = solicitud.estatus;
              if (solicitud.estatus.toLowerCase() === 'editando') {
                estatusDisplayOption = 'Editando...';
              }
              if (estatusDisplayOption !== 'Editando...') {
                estatusSet.add(estatusDisplayOption);
              }
            });
            const estatusList = Array.from(estatusSet);
            estatusList.forEach(estatus => { %>
              <option value="<%= estatus %>"><%= estatus %></option>
          <% }); %>
        </select>
      </div>

      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table id="table-solicitudes" class="table table-hover w-100">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Asunto</th>
                  <th>Descripción</th>
                  <th>Archivos</th>
                  <th>Creador</th>
                  <th>Estado</th>
                  <th>Órdenes</th>
                  <th>Fecha Creación</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% if (solicitudes.length > 0) { %>
                  <% solicitudes.forEach(solicitud => { %>
                    <%
                      let estatusLower = solicitud.estatus.toLowerCase();
                      let estatusClass = '';
                      let estatusDisplay = solicitud.estatus;
                      if (estatusLower === 'abierta') {
                        estatusClass = 'bg-warning';
                      } else if (estatusLower === 'procesada') {
                        estatusClass = 'bg-success';
                      } else if (estatusLower === 'editando' || estatusLower === 'procesando') {
                        estatusClass = 'bg-info';
                        estatusDisplay = estatusLower.charAt(0).toUpperCase() + estatusLower.slice(1) + '...';
                      } else if (estatusLower === 'eliminada') {
                        estatusClass = 'bg-danger';
                      }
                    %>
                  <tr>
                    <td class="id-column"><%= solicitud.id_solicitud %></td>
                    <td><%= solicitud.asunto %></td>
                    <td class="descripcion-column"><%= solicitud.descripcion %></td>
                    <td>
                      <% if (solicitud.hasFiles) { %>
                        <a href="/solicitudes-ver-archivos/<%= solicitud.id %>">Ver archivos</a>
                      <% } else { %>
                        Sin archivos
                      <% } %>
                    </td>
                    <td><%= solicitud.usuario_solicitante ? solicitud.usuario_solicitante : '' %></td>
                    <td class="estatus-column" data-filter="<%= estatusDisplay %>">
                      <% if (estatusClass) { %>
                        <span class="badge <%= estatusClass %> text-white">
                          <%= estatusDisplay %>
                        </span>
                      <% } %>
                    </td>
                    <td>
                      <% if (solicitud.ordenes_count && solicitud.ordenes_count > 0) { %>
                        <a href="/solicitudes/<%= solicitud.id %>/ordenes">
                          <span>Ver OC (<%= solicitud.ordenes_count %>)</span>
                        </a>
                      <% } else { %>
                        Sin OC
                      <% } %>
                    </td>
                    <td><%= solicitud.created_at ? solicitud.created_at : '' %></td>
                    <td>
                      <div class="btn-group btn-group-actions" role="group">
                        <a
                          href="/solicitudes/<%= solicitud.id %>"
                          class="btn btn-sm btn-outline-primary"
                          title="Ver"
                          aria-label="Ver Solicitud <%= solicitud.id_solicitud %>"
                        >
                          <i class="fas fa-eye"></i>
                        </a>

                        <a
                          <% if (['eliminada', 'editando', 'procesada'].includes(estatusLower)) { %>
                            class="btn btn-sm btn-outline-secondary disabled"
                            title="Editar"
                            aria-label="Editar Solicitud <%= solicitud.id_solicitud %> (No disponible)"
                          <% } else { %>
                            href="/solicitudes-editar/<%= solicitud.id %>"
                            class="btn btn-sm btn-outline-secondary"
                            title="Editar"
                            aria-label="Editar Solicitud <%= solicitud.id_solicitud %>"
                          <% } %>
                        >
                          <i class="fas fa-edit"></i>
                        </a>

                        <a
                          <% if (['eliminada', 'editando', 'procesada'].includes(estatusLower)) { %>
                            class="btn btn-sm btn-outline-danger disabled"
                            title="Eliminar"
                            aria-label="Eliminar Solicitud <%= solicitud.id_solicitud %> (No disponible)"
                          <% } else { %>
                            href="/solicitudes-eliminar/<%= solicitud.id %>"
                            class="btn btn-sm btn-outline-danger"
                            title="Eliminar"
                            aria-label="Eliminar Solicitud <%= solicitud.id_solicitud %>"
                          <% } %>
                        >
                          <i class="fas fa-trash-alt"></i>
                        </a>

                        <% if (solicitud.ordenes_count && solicitud.ordenes_count > 0) { %>
                          <a
                            href="/ordenes-crear/<%= solicitud.id %>"
                            class="btn btn-sm btn-primary btn-fixed-width"
                            title="Crear otra Orden de Compra"
                            aria-label="Crear otra Orden de Compra para Solicitud <%= solicitud.id_solicitud %>"
                          >
                            Crear otra OC
                          </a>
                        <% } else { %>
                          <% if (estatusLower === 'abierta') { %>
                            <a
                              href="/ordenes-crear/<%= solicitud.id %>"
                              class="btn btn-sm btn-primary btn-fixed-width"
                              title="Crear Orden de Compra"
                              aria-label="Crear Orden de Compra para Solicitud <%= solicitud.id_solicitud %>"
                            >
                              Crear OC
                            </a>
                          <% } %>
                        <% } %>
                      </div>
                    </td>
                  </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="9" class="text-center">No hay solicitudes disponibles.</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="content-backdrop fade"></div>
</div>

<%- include('partials/footer-text') %>
<%- include('partials/footer') %>
<%- include('partials/content-wrapper-close') %>

<script>
  $(document).ready(function () {
    var table = $("#table-solicitudes").DataTable({
      responsive: true,
      autoWidth: false,
      language: {
        url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json",
        search: "",
        emptyTable: "No hay solicitudes disponibles."
      },
      pageLength: 10,
      lengthChange: false,
      order: [[7, "desc"], [0, "desc"]],
      columnDefs: [
        {
          targets: 5,
          render: function (data, type, row, meta) {
            var cell = $('<div>').html(data);
            var estatus = cell.data('filter') || cell.text();
            if (type === 'filter' || type === 'sort') {
              return estatus;
            }
            return data;
          },
          responsivePriority: 2
        },
        {
          targets: 8,
          orderable: false,
          responsivePriority: 1
        },
        {
          targets: 2,
          responsivePriority: 5
        },
        {
          targets: [3],
          responsivePriority: 4
        },
        {
          targets: [4],
          responsivePriority: 3
        },
        {
          targets: '_all',
          responsivePriority: 6
        }
      ],
      initComplete: function () {
        var estatusFilter = $('#estatus-filter').detach();
        var dataTableFilter = $('#table-solicitudes_filter');
        var searchInput = dataTableFilter.find('input').detach();
        dataTableFilter.empty();

        var searchInputGroup = $('<div class="input-group" style="margin-right:10px;"></div>');
        var searchIcon = $('<span class="input-group-text"><i class="fas fa-search"></i></span>');
        searchInput.addClass('form-control').attr('placeholder', 'Buscar...').css('width', 'auto');
        searchInputGroup.append(searchIcon).append(searchInput);

        dataTableFilter.append($('<div class="d-flex align-items-center"></div>')
          .append(searchInputGroup)
          .append(estatusFilter.css('margin-left', '10px'))
        );
        dataTableFilter.css('float', 'left');
      }
    });

    $('#estatus-filter').on('change', function () {
      var estatus = $(this).val();
      table.column(5).search(estatus).draw();
    });
  });
</script>
