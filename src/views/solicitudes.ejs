<!-- views/solicitudes.ejs -->
<%- include('partials/header', { title: 'Solicitudes' }) %>
<%- include('partials/navbar') %>
<%- include('partials/sidebar') %>
<%- include('partials/content-wrapper-open') %>

<div class="content-wrapper">
  <!-- Content -->
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="app-solicitudes-lista">
      <!-- Mensajes de éxito y error -->
      <% if (successMessage && successMessage.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= successMessage %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Cerrar"
        ></button>
      </div>
      <% } %>
      <% if (errorMessage && errorMessage.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= errorMessage %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Cerrar"
        ></button>
      </div>
      <% } %>

      <!-- Título y Botón Crear Nueva Solicitud -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div>
          <h4 class="mb-1">Lista de Solicitudes</h4>
          <p class="mb-0">Solicitudes realizadas por los usuarios.</p>
        </div>
        <div>
          <a href="/solicitudes-crear" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Crear Nueva Solicitud
          </a>
        </div>
      </div>

      <!-- Sección de Filtros y Buscador -->
      <div class="card mb-4">
        <div class="card-body">
          <form id="filters-form" class="row g-3">
            <!-- Filtro por Estatus -->
            <div class="col-md-3">
              <label for="estatus-filter" class="form-label">Filtrar por Estatus</label>
              <select id="estatus-filter" class="form-select">
                <option value="">Todos</option>
                <% estatusList.forEach(estatus => { %>
                  <option value="<%= estatus %>"><%= estatus %></option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
              <button type="button" id="clear-filters" class="btn btn-secondary w-100">
                <i class="fas fa-times me-1"></i> Limpiar Filtros
              </button>
            </div>

            <!-- Buscador por Palabras Clave -->
            <div class="col-md-6">
              <label for="search-box" class="form-label">Buscar</label>
              <input type="text" id="search-box" class="form-control" placeholder="Buscar en Asunto, Descripción, Usuario Solicitante, Correo Solicitante">
            </div>
          </form>
        </div>
      </div>

      <!-- Tabla de solicitudes -->
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table id="table-solicitudes" class="table table-hover w-100">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Asunto</th>
                  <th>Descripción</th>
                  <th>Archivos</th>
                  <th>Estatus</th>
                  <th>Usuario Solicitante</th>
                  <th>Correo Solicitante</th>
                  <th>Acciones</th>
                  <th>Orden de Compra</th>
                </tr>
              </thead>
              <tbody>
                <% if (solicitudes.length > 0) { %>
                  <% solicitudes.forEach(solicitud => { %>
                  <tr>
                    <td><%= solicitud.id %></td>
                    <td><%= solicitud.asunto %></td>
                    <td><%= solicitud.descripcion %></td>
                    <td>
                      <% if (solicitud.hasFiles) { %>
                        <a href="/solicitudes/ver-archivos/<%= solicitud.id %>">Ver archivos</a>
                      <% } else { %>
                        Sin archivos
                      <% } %>
                    </td>
                    <td>
                      <span
                        class="badge <% if (solicitud.estatus.toLowerCase() === 'pendiente') { %> bg-warning <% } else if (solicitud.estatus.toLowerCase() === 'aprobado') { %> bg-success <% } else if (solicitud.estatus.toLowerCase() === 'rechazado') { %> bg-danger <% } else { %> bg-secondary <% } %>"
                      >
                        <%= solicitud.estatus %>
                      </span>
                    </td>
                    <td><%= solicitud.usuario_solicitante %></td>
                    <td><%= solicitud.correo_solicitante %></td>
                    <td>
                      <div class="btn-group" role="group">
                        <a
                          href="/solicitudes/<%= solicitud.id %>"
                          class="btn btn-sm btn-outline-primary"
                          title="Ver"
                        >
                          <i class="fas fa-eye"></i>
                        </a>
                        <a
                          href="/solicitudes-editar/<%= solicitud.id %>"
                          class="btn btn-sm btn-outline-secondary"
                          title="Editar"
                        >
                          <i class="fas fa-edit"></i>
                        </a>
                        <a
                          href="/solicitudes-eliminar/<%= solicitud.id %>"
                          class="btn btn-sm btn-outline-danger"
                          title="Eliminar"
                        >
                          <i class="fas fa-trash-alt"></i>
                        </a>
                      </div>
                    </td>
                    <td>
                      <a
                        href="/ordenes-crear/<%= solicitud.id %>"
                        class="btn btn-sm btn-primary"
                        >Crear Orden de Compra</a
                      >
                    </td>
                  </tr>
                  <% }) %>
                <% } else { %>
                <tr>
                  <td colspan="9" class="text-center">
                    No hay solicitudes disponibles.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="content-backdrop fade"></div>
</div>

<!-- Inicialización de DataTables con Filtros Personalizados -->
<script>
  $(document).ready(function () {
    // Inicializar DataTable
    var table = $("#table-solicitudes").DataTable({
      responsive: true,
      language: {
        url: "//cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json",
      },
      // Opcional: Ajusta el número de registros por página
      pageLength: 10,
      lengthChange: false,
      // Orden inicial (puedes cambiarlo según tu preferencia)
      order: [[0, "desc"]], // Ordenar por ID descendente
    });

    // Filtro por Estatus
    $('#estatus-filter').on('change', function () {
      var estatus = $(this).val();
      if (estatus) {
        // Filtrar por la columna de Estatus (índice 4)
        table.column(4).search('^' + estatus + '$', true, false).draw();
      } else {
        // Si no hay filtro, limpiar la búsqueda en Estatus
        table.column(4).search('').draw();
      }
    });

    // Limpiar filtros
    $('#clear-filters').on('click', function () {
      $('#estatus-filter').val('');
      $('#search-box').val('');
      table.column(4).search('').draw();
      table.search('').draw();
    });

    // Buscador por Palabras Clave
    $('#search-box').on('keyup change', function () {
      table.search(this.value).draw();
    });

    // Asegurar que la tabla se expanda al máximo
    $('.table-responsive').css('overflow-x', 'auto');
  });
</script>
<%- include('partials/footer-text') %>
<%- include('partials/footer') %>
<%- include('partials/content-wrapper-close') %>
