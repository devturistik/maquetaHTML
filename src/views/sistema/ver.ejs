<%- include('partials/header', { title: 'Ver Sistema' }) %>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="app-usuario">
      <div
        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-6 row-gap-4"
      >
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1">Detalles del Sistema</h4>
          <p class="mb-0">Información del sistema seleccionado.</p>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-4">
          <a href="/sistemas" class="btn btn-label-secondary">Regresar</a>
          <a
            href="javascript:void(0);"
            class="btn btn-primary"
            onclick="editProduct('<%= system.id %>')"
            >Editar</a
          >
        </div>
      </div>

      <!-- Mensaje de error -->
      <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <div class="row">
        <div class="col-12 col-lg-12">
          <div class="card mb-6">
            <div class="card-header">
              <h5 class="card-title mb-0">Información del Sistema</h5>
            </div>
            <div class="card-body">
              <div class="row mb-6">
                <div class="col">
                  <label class="form-label">Nombre del Sistema</label>
                  <p class="form-control-plaintext"><%= system.nombre %></p>
                </div>
                <div class="col">
                  <label class="form-label">Descripcion del Sistema</label>
                  <p class="form-control-plaintext">
                    <%= system.descripcion || 'Sin descripcion' %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer-text') %>
  <div class="content-backdrop fade"></div>
</div>
<%- include('partials/footer') %>

<script>
  function editProduct(id) {
    window.location.href = "/sistema-editar/" + id;
  }

  function suspendUser(userId) {
    if (confirm("¿Estás seguro de que quieres suspender este usuario?")) {
      fetch(`/usuario-suspender/${userId}`, {
        method: "POST",
      })
        .then((response) => {
          if (response.ok) {
            alert("Usuario suspendido exitosamente.");
            window.location.href = "/usuarios"; // Redirigir a la lista de usuarios
          } else {
            alert("Error al suspender el usuario.");
          }
        })
        .catch((error) => {
          console.error("Error:", error);
          alert("Error al suspender el usuario.");
        });
    }
  }
</script>
