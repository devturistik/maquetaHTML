<%- include('partials/header', { title: 'Editar Sistema' }) %>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="app-usuario">
      <form action="/sistema-editar/<%= system.id %>" method="POST">
        <div
          class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-6 row-gap-4"
        >
          <div class="d-flex flex-column justify-content-center">
            <h4 class="mb-1">Editar Sistema</h4>
            <p class="mb-0">Modifica la información del sistema.</p>
          </div>
          <div class="d-flex align-content-center flex-wrap gap-4">
            <div class="d-flex gap-4">
              <a href="/sistemas" class="btn btn-label-secondary">Regresar</a>
            </div>
            <button type="submit" class="btn btn-primary">
              Guardar Cambios
            </button>
          </div>
        </div>

        <!-- Mensaje de error -->
        <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <!-- Mensaje de éxito -->
        <% if (success_msg) { %>
        <div class="alert alert-success"><%= success_msg %></div>
        <% } %>

        <div class="row">
          <div class="col-12 col-lg-12">
            <div class="card mb-6">
              <div class="card-header">
                <h5 class="card-title mb-0">Información del Sistema</h5>
              </div>
              <div class="card-body">
                <div class="row mb-6">
                  <div class="col">
                    <label class="form-label" for="sistema-nombre"
                      >Nombre del Sistema</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="sistema-nombre"
                      placeholder="Sistema X"
                      name="sistemaNombre"
                      value="<%= system.nombre %>"
                      aria-label="Sistema Nombre"
                    />
                  </div>
                  <div class="col">
                    <label class="form-label" for="sistema-descripcion"
                      >Descripcion del Sistema</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="sistema-descripcion"
                      placeholder="Descripcion X"
                      name="sistemaDescripcion"
                      value="<%= system.descripcion %>"
                      aria-label="Sistema Descripcion"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>

  <%- include('partials/footer-text') %>
  <div class="content-backdrop fade"></div>
</div>
<%- include('partials/footer') %>

<script>
  // Función para ocultar mensajes después de 5 segundos
  window.onload = function () {
    const successMsg = document.querySelector(".alert-success");
    const errorMsg = document.querySelector(".alert-danger");

    if (successMsg) {
      setTimeout(() => {
        successMsg.style.display = "none";
      }, 5000); // Oculta después de 5000 ms (5 segundos)
    }

    if (errorMsg) {
      setTimeout(() => {
        errorMsg.style.display = "none";
      }, 5000); // Oculta después de 5000 ms (5 segundos)
    }
  };
</script>
